{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "target": "es2019",
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": [
    "src/typings",
    "packages/cli",
    "src/buses",
    "src/stores",
    "src/core"
  ]
}

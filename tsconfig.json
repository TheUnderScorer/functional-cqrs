{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "target": "esnext",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@functional-cqrs/cli": [
        "./packages/cli/src"
      ],
      "@functional-cqrs/typings": [
        "./packages/typings/src"
      ]
    },
    "types": [
      "node",
      "jest"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "packages/typings",
    "packages/cli"
  ]
}

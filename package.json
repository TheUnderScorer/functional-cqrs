{
  "name": "functional-cqrs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Przemysław Żydek <przemyslawzydek@gmail.com>",
  "scripts": {
    "build": "lerna run build --stream",
    "test": "jest --config jest.config.js",
    "coverage": "jest --config jest.config.js --coverage",
    "dev": "lerna run dev --parallel",
    "prod": "lerna run prod --parallel",
    "stop": "lerna run stop --parallel",
    "clean": "lerna run clean --parallel",
    "lint": "eslint . --format=pretty --ext .ts",
    "lint:fix": "eslint . --format=pretty --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "publish-ci": "lerna publish --yes"
  },
  "engines": {
    "node": ">=12.13.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/ramda": "^0.27.11",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-xo": "^0.32.0",
    "eslint-config-xo-typescript": "^0.31.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "typescript": "3.9.7"
  },
  "dependencies": {
    "ramda": "^0.27.0"
  }
}

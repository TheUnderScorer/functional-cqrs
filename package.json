{
  "name": "functional-cqrs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Przemysław Żydek <przemyslawzydek@gmail.com>",
  "scripts": {
    "build": "lerna run build --stream",
    "test": "jest --config jest.config.js",
    "coverage": "jest --config jest.config.js --coverage",
    "dev": "lerna run dev --parallel",
    "prod": "lerna run prod --parallel",
    "stop": "lerna run stop --parallel",
    "clean": "lerna run clean --parallel",
    "lint": "eslint . --format=pretty --ext .ts",
    "lint:fix": "eslint . --format=pretty --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "cli": "node packages/cli",
    "publish-ci": "lerna publish --conventional-commits"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/ramda": "^0.26.40",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "conventional-changelog-emojis": "^3.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-config-xo-typescript": "^0.21.0",
    "eslint-formatter-pretty": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "lerna": "^3.20.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "ramda": "^0.26.1"
  }
}
